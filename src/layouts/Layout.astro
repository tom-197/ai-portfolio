---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AI Portfolio & Tech Commentaries" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<nav>
				<a href="/" class="logo">Tom Hayes</a>
				<div class="links">
					<a href="/projects">Projects</a>
					<a href="/blog">Blog</a>
				</div>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; {new Date().getFullYear()} Tom Hayes</p>
		</footer>
	</body>
</html>
